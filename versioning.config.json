{
  "rootPackageJson": "package.json",
  "packages": ["apps/landing", "apps/docs"],
  "changelogFile": "CHANGELOG.md",
  "conventionalCommits": true,
  "syncDependencies": true,
  "ignorePackages": ["packages/backend"],
  "extensions": [],
  "privateCheck": true,
  "cleanupRoot": true,
  "roadmapFile": "ROADMAP.md",
  "reentryFeatures": {
    "enabled": true,
    "trackHistory": true,
    "versionHistory": ".version-history.json"
  },
  "validation": {
    "enforceConventionalCommits": true,
    "requireChangelog": true,
    "checkDependencySync": true
  },
  "branchAware": {
    "enabled": true,
    "mainBranch": "main",
    "developBranch": "develop",
    "featurePrefix": "feature/",
    "hotfixPrefix": "hotfix/",
    "releasePrefix": "release/",
    "versionFormats": {
      "main": "semantic",
      "develop": "dev",
      "feature": "feature",
      "hotfix": "hotfix",
      "release": "semantic"
    }
  }
}
